{% block body %}
<div class="container-fluid mt-5">
   <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Ajouter Departement</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
             
              {{form_start(form,{attr:{novalidate:'novalidate'}})}}
                <div class="card-body">                  
                   <div class="form-group">
                    <label for="exampleInputEmail1">Nom departement</label>
                     {{form_widget(form.nomdepartement,{'attr':{'class':'form-control'}})  }}
                    {{form_errors(form.nomdepartement,{'attr':{'class':'text-danger'}})  }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Type departement</label>
                    {{form_widget(form.zonedepartement,{'attr':{'class':'form-control'}})  }}
                    {{form_errors(form.zonedepartement,{'attr':{'class':'text-danger'}})  }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Detail departement</label>
                   {{form_widget(form.detaildepartement,{'attr':{'class':'form-control'}})  }}
                   {{form_errors(form.detaildepartement,{'attr':{'class':'text-danger'}})  }}
                  </div>
                  
                 
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary"> {{ button_label|default('Save') }}</button>
                  
                </div>
                {{ form_end(form) }}
             
             </div>
            </div>
{% endblock %}
