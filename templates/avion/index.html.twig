{% extends 'base-back.html.twig' %}

{% block title %}Avions{% endblock %}

{% block body %}

    <h1>Avion index</h1>
    {{ form(form) }}
    <table class="table">
        <thead>
            <tr>
                <th>CodeAvion</th>
                <th>TypeA</th>
                <th>Model</th>
                <th>PassagerN</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for avion in avions %}
            <tr>

                <td>{{ avion.CodeAvion }}</td>
                <td>{{ avion.TypeA }}</td>
                <td>{{ avion.Model }}</td>
                <td>{{ avion.PassagerN }}</td>
                <td>
                    <a href="{{ path('app_avion_show', {'id': avion.id}) }}">show</a>
                    <a href="{{ path('app_avion_edit', {'id': avion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_avion_new') }}">Create new</a>
{% endblock %}
