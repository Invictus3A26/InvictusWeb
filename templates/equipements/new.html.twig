{% block body %}
<div class="container-fluid mt-5">
   <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Ajouter Equipement</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
             
              {{form_start(form,{attr:{novalidate:'novalidate'}})}}
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Type equipement</label>
                    {{form_widget(form.typeequipement,{'attr':{'class':'form-control'}})  }}
                    {{form_errors(form.typeequipement,{'attr':{'class':'text-danger'}})  }}
                  </div>
                   <div class="form-group">
                    <label for="exampleInputEmail1">Nom equipement</label>
                     {{form_widget(form.nomequipement,{'attr':{'class':'form-control'}})  }}
                    {{form_errors(form.nomequipement,{'attr':{'class':'text-danger'}})  }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Detail equipement</label>
                   {{form_widget(form.detailequipement,{'attr':{'class':'form-control'}})  }}
                   {{form_errors(form.detailequipement,{'attr':{'class':'text-danger'}})  }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Zone equipement</label>
                   {{form_widget(form.zoneequipement,{'attr':{'class':'form-control'}})  }}
                   {{form_errors(form.zoneequipement,{'attr':{'class':'text-danger'}})  }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Etat equipement</label>
                   {{form_widget(form.etatequipement,{'attr':{'class':'form-control'}})  }}
                   {{form_errors(form.etatequipement,{'attr':{'class':'text-danger'}})  }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Nom departement</label>
                   {{form_widget(form.idDepartement,{'attr':{'class':'form-control'}})  }}
                   {{form_errors(form.idDepartement,{'attr':{'class':'text-danger'}})  }}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Image</label>
                   {{form_widget(form.imageFile,{'attr':{'class':'form-control'}})  }}
                   
                  </div>
                 
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary"> {{ button_label|default('Save') }}</button>
                  
                </div>
                {{ form_end(form) }}
             
             </div>
            </div>
{% endblock %}
