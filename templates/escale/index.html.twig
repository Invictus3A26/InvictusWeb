{% extends 'base.html.twig' %}

{% block title %}Escale index{% endblock %}

{% block body %}
   <div class="container-fluid mt-5">
<div class="row">
<div class="col-12">
 <div class="card card-info" >
              <div class="card-header">
                <h3 class="card-title">Gestion Aeroport</h3>
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width : 200px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">

    <table class="table table-hover text-nowrap">
        <thead>
            <tr>
            
                <th>AeroportDepart</th>
                <th>AeroportDestination</th>
                <th>Heurearriveescale</th>
                <th>Heuredepartescale</th>
                <th>Dur√©e</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for escale in escales %}
            <tr>
               
                <td>{{ escale.aeroportDepart.nomAeroport }}</td>
                <td>{{ escale.aeroportDestination.nomAeroport }}</td>
                <td>{{ escale.heurearriveescale }}</td>
                <td>{{ escale.heuredepartescale }}</td>
                <td>{{ escale.duree }}</td>
                <td>
                    <a href="{{ path('app_escale_show', {'idEscale': escale.idEscale}) }}"><i class="fa-solid fa-circle-info"></i></a>
                    <a href="{{ path('app_escale_edit', {'idEscale': escale.idEscale}) }}"><i class="fa-solid fa-screwdriver-wrench"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a  type="button" class="btn btn-block btn-outline-success btn-xs my-1" style="width : 200px; margin : auto;" href="{{ path('app_escale_new') }}">Create new</a>
{% endblock %}
