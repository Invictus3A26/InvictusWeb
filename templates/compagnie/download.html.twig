{% extends "base-pdf.html.twig" %}

{% block title %}Liste des données de {{ compagnie.NomCom }}{% endblock %}
{% block body %}
    <h1>Liste des données de {{ compagnie.NomCom }}</h1>
    <h2>Vos données</h2>
    <table border=1>
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">E-mail</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ compagnie.NomCom }}</td>
                <td>{{ compagnie.Link }}</td>
                <td>{{ compagnie.Pays }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Vos annonces</h2>
    <table border=1>
        <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Contenu</th>
            </tr>
        </thead>
        <tbody>

                <tr>
                    <td>{{ compagnie.NomCom }}</td>
                    <td>{{ compagnie.Link }}</td>
                </tr>

        </tbody>
    </table>

    <h2>Vos images</h2>

        <h3 style="color: #8B2252">{{ compagnie.NomCom }}</h3>
    {% for image in compagnie.images %}

        {{ absolute_url(asset('assets/img/uploads/' ~ image.name)) }}

    {% endfor %}

{% endblock %}